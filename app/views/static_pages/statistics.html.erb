<%= provide(:title, 'Statistics') %>
<div class="adminContent">
	<div class="profile-section">
		<div class="pageHeader">
			<div class="headerInfo">
		    <h1>Statistics</h1><br>
        <p><%= Time.now.strftime("%I:%M %p on %b %d, %Y") %></p>
		  </div>	
		</div>
	  <div class="row">
		  <div class="span12 adminView">
			  <div class="adminColumn" style="margin-right:0;">
			  	<h2>To Date<span style="font-size:12px;color:#999;float:right;line-height:35px;">(by week, including most recent)</span></h2>
			    <ul>
			    	<li>
			        <h3>
			          <%= pluralize(@all_videos_count, "Video") %> added 
			        </h3>
			      </li>
				    <li>
					    <h3>
					      <%= pluralize(@all_users_count, "User") %> joined 
					    </h3>
					  </li>
				    <li>
					    <h3>
					      <%= pluralize(@all_plays_count, "View") %> 
					      <span class="sparklines"><%= @all_plays %></span>
					    </h3>
					  </li>
			    	<li>
				      <h3>
				        <%= pluralize(@all_shares_count, "Share") %> 
				        <span class="sparklines"><%= @all_shares %></span>
				      </h3>
				    </li>
			    	<li>
				      <h3>
				        <%= pluralize(@all_votes_count, "Vote") %> 
				        <span class="sparklines"><%= @all_votes %></span>
				      </h3>
				    </li>
			    </ul>
			  </div>
		  </div>
	  </div>
	</div>
</div>
<div class="clearfix"></div>