<%= provide(:title, 'Sign In') %>
<div id="mainContent">
  <div id="textHeader">
    <%= image_tag("welcomeBack.png", alt: "Welcome back! Please sign in.", width: "361", height: "27", class: "formHeader") %>
  </div>
  <div class="signinDialog">
      <%= simple_form_for(:session, url: sessions_path, html: {class: 'form-horizontal' }) do |f| %>

        <%= f.input :email, label: "Your Email" %>
        <%= f.input :password, label: "Password" %>
        <%= link_to "Forget your password?", new_password_reset_path, class: "forgotPassword" %>
        <%= label_tag :remember_me, "Remember Me", class: "rememberMe" %>
        <%= check_box_tag :remember_me, 1, params[:remember_me], checked: true %>

        <br><br>
        <%= f.submit "Sign In", class: "btn btn-header", style: "width:120px;" %>
      <% end %>
	  <div class="clearfix"></div>
  </div>
  <div class="staticContent">
    <p class="center">Please sign in to vote for a video.  You can vote as many times as you'd like for a video, but only once every 24 hours.</p>
    <p class="center">If you have not yet registered for the contest, you can <%= link_to "register now".html_safe, register_path %>.</p>
  </div>
  <div id="sponsorMobile"></div>
</div>
<div class="clearfix"></div>